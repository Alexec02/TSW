<div class="switch-item-container border p-2 mb-3 bg-light shadow-2 rounded subscription-item-container" data-state="apagado" key="{{publicid}}"> 
    <div class="row">
        <div class="col-6">
            <h4 class="text-dark">{{  nombre }}</h4>
            {{#if  estado }}
                <img class="small-image" width="20px" height="20px" src="images/circuloVerde.png">
            {{else}}
                <img class="small-image" width="20px" height="20px" src="images/circuloRojo.png">
            {{/if}}
        </div>
        <div class="col-6">
            <span class="text-dark">{{i18n "Author"}}: {{  alias }}</span>
            {{#if  estado }}
                <span class="text-dark">{{i18n "Time on"}}: {{  encendido_hasta }}</span>
            {{else}}
                <span class="text-dark">{{i18n "Last modification"}}: {{  tiempo_modificacion }}</span>
            {{/if}}
            <form method="POST" action="index.php?controller=subscription&amp;action=delete" style="display: inline">
                <input type="hidden" name="public_id" value="{{  publicid }}">
                <a href="#" onclick="if (confirm('{{i18n "are you sure?"}}')) {  parentNode.submit() }" class="btn btn-danger mt-2">{{i18n "Delete"}}</a>
            </form>
        </div>
    </div>
    </div>